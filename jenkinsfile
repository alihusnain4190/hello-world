pipeline{
    agent any
    environment{
 PATH= "/opt/apache-maven-3.8.4/bin:$PATH"

    }
    stages{
        stage('Git checkout'){
            steps{
              git 'https://github.com/alihusnain4190/hello-world'
            }
        }
       
    
    stage("Maven Build"){
            steps{
                sh "mvn clean package"
            sh "mv target/*.war target/myweb.war"
        }
        }
        
            
         
    
    
    
    
    }
    }

