pipeline{
    agent any
    environment{
 PATH= "/opt/apache-maven-3.8.4/bin:$PATH"

    }
    stages{
        stage('Git checkout'){
            steps{
              git 'https://github.com/alihusnain4190/hello-world'
            }
        }
       
    
    stage("Maven Build"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/*.war  ec2-user@172.31.87.18:/opt/tomcat8/webapp/
                    
                    ssh ec2-user@172.31.87.18 /opt/tomcat8/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.87.18 /opt/tomcat8/bin/startup.sh
                
                """
            }
            
            }
        }
    
    
    
    
    }
    }

